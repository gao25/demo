.demo-tplform
  padding 5px 20px
  color #666
  font-size 0
  .inputbar
    padding 12px 0 0 100px
    font-size 12px
    .barname
      position absolute
      margin-left -100px
      width 90px
      padding-right 10px
      text-align right
      line-height 28px
      em
        color #f00
    input, select, textarea
      outline none
      color #666
    input.text,input.number,input.tel,input.email
      width 386px
      height 14px
      padding 6px
      border solid 1px #ccc
    input.number,input.tel,input.email
      width 150px
    select
      margin 0
      padding 0
      border solid 1px #ccc
      min-width 150px
      height 28px
      background-color #fff
    label
      display inline-block
      margin-right 8px
      height 18px
      padding 5px 2px
      over-flow hidden
      cursor pointer
    textarea
      width 386px
      height 40px
      padding 6px
      border solid 1px #ccc
      resize none
      line-height 20px
  .btnbar
    padding 20px 0
    text-align center
    font-size 0
    input
      margin 0 6px
      height 28px
      border solid 1px #ddd
      padding 0 15px
      color #666
      background-color #eee
      cursor pointer
      font-size 12px
      outline none
    input.submit
      color #fff
      background-color #2a72c5
  .halfbar
    display inline-block
    width 200px
    input, textarea
      max-width 186px


